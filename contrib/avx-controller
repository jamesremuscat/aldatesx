MESSAGEDIR=/var/log/avx
MESSAGELOG=/var/log/avx/avx.log
PID=/var/run/avx-controller.pid
CMDLINE="-c /etc/avx/config.json"

# Add Pyro Config
# here you can add others ...
#export PYRO_HMAC_KEY=12345
export PYRO_LOGFILE="$MESSAGELOG"
export PYRO_LOGLEVEL=INFO

# Check the script is being run by root user
if [ "$(id -u)" != "0" ]; then
  echo 1>&2 "ERROR: The $0 script must be run as root"
  exit 1
fi

command -v avx-controller >/dev/null 2>&1 || { echo >&2 "avx-controller executable is not in PATH.  Aborting."; exit 1; }

# Create the PID File
touch $PID

case "$1" in
  start)
    # create the log directory if not exist
    [ ! -d "$MESSAGEDIR" ] && mkdir -p "$MESSAGEDIR"

    echo "Starting avx controller"
    # test if not already running
    if [ ! -f "/proc/$(cat $PID)/exe" ]; then
      avx-controller "$CMDLINE" > "$MESSAGELOG" 2>&1 &
      echo $!>"$PID"
    else
      echo "avx controller already running"
    fi
  ;;
  stop)
    echo "Stopping avx controller"
    # test if running
    if [ -f "/proc/$(cat $PID)/exe" ]; then
      kill -9 "$(cat $PID)"
      rm -rf "$PID"
    else
      echo "avx controller already stopped"
    fi
    ;;
  restart)
    $0 stop
    $0 start
    ;;
  *)
    echo "usage: $0 {start|stop|restart}"
esac
exit 0
